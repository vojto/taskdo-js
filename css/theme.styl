@import './kit/kit'

// Typo
// ----------------------------------------------------------------------------
body, input
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif

h1, h2, h3
  color #aeaeae
  text-shadow 0px 1px 0px #fafafa
  font-weight normal
  margin-bottom 5px

h1
  font-size 17px

h2
  font-size 16px

h3
  font-size 15px
  
  
// Layout
// ----------------------------------------------------------------------------

body, html
  margin: 0;
  padding: 0;
  width: 100%
  height: 100%

body
  vbox()

header#header
  vbg-gradient(#4173ad, #5284bf)
  border-bottom 2px solid #4e7bb2
  height 30px
  
  .inside
    height 100%
    background url(/images/logo.png) no-repeat center

article#content
  box-flex(1)
  vbox()
  background #ededee url(/images/noise-light.png)
  
  &.without-sidebar
    background #e6e6e7 url(/images/noise-dark.png)
  
  #top
    padding 10px 20px 10px 20px
  
  #middle
    hbox()
    box-flex(1)
    #sidebar
      width 25%
      background #e6e6e7 url(/images/noise-dark.png)
      border-right 1px solid #c8cace
    
    #main
      box-flex(1)

// Buttons
// ----------------------------------------------------------------------------

a.button
  &.background
    background #dddddd
    border-top 1px solid #c9c9c9
    border-bottom 1px solid #eeeeee
    border-radius(3px)
    padding 5px 5px 5px 5px
    
    color #9e9e9e
    text-decoration none
    font-size 11px
    font-weight bold
    text-shadow 0px 1px 0px rgba(242, 242, 242, 1)